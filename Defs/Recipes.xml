<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef Name="MakeJewelryBase" Abstract="True">
		<workerClass>Jewelry.RecipeWorker_Jewelry</workerClass>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<recipeUsers>
			<li>TableSculpting</li>
		</recipeUsers>
		<workSkill>Artistic</workSkill>
		<researchPrerequisite>Jewelry</researchPrerequisite>
		<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		<fixedIngredientFilter>
			<categories>
				<li>Gemstones</li>
			</categories>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>5</Crafting>
			<Artistic>5</Artistic>
		</skillRequirements>
	</RecipeDef>
	
	<RecipeDef ParentName="MakeJewelryBase">
		<defName>Make_Bracelet</defName>
		<label>make bracelet</label>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Gemstones</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<customSummary>metal</customSummary>
					<stuffCategoriesToAllow>
						<li>Metallic</li>
					</stuffCategoriesToAllow>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<products>
			<Jewelry_Bracelet>1</Jewelry_Bracelet>
		</products>
		<fixedIngredientFilter>
			<allowAllWhoCanMake>
				<li>Jewelry_Bracelet</li>
			</allowAllWhoCanMake>
		</fixedIngredientFilter>
	</RecipeDef>

