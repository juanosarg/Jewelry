<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="RockBase" Name="MineableGemBase" Abstract="True">
		<graphicData>
			<texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(107, 97, 97)</color>
		</graphicData>
		<statBases>
			<MaxHitPoints>1500</MaxHitPoints>
		</statBases>
		<building>
			<isResourceRock>true</isResourceRock>
			<mineableYield>20</mineableYield>
			<mineableScatterCommonality>0.08</mineableScatterCommonality>
			<mineableScatterLumpSizeRange>2~6</mineableScatterLumpSizeRange>
			<veinMineable IgnoreIfNoMatchingField="True">true</veinMineable>
		</building>
	</ThingDef>
	
