    <xpath>Defs/WorkGiverDef[defName="DoBillsSculpt"]/fixedBillGiverDefs</xpath>
    <value>
      <li>LaserTableSculpting</li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[@ParentName="SculptureBase"]/stuffCategories</xpath>
